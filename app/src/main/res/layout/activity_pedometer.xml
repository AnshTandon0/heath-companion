<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pedometer"
    android:background="#CCFF91"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/StartRunningMode"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Start Running Mode"
            android:backgroundTint="#EF0D5A"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:layout_marginVertical="20dp"
            android:onClick="runningMode"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="15dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#EF0D5A"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="15dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:gravity="center"
                                android:text="Total Steps :-"
                                android:background="@color/white"
                                android:textColor="@color/black"
                                android:textSize="30sp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/stepsTotal"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="30sp"
                                android:layout_marginVertical="20dp"
                                android:textColor="@color/black"
                                android:background="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#EF0D5A"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="15dp">

                            <TextView
                                android:layout_marginTop="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:background="@color/white"
                                android:textColor="@color/black"
                                android:text="Total distance :-"
                                android:textStyle="italic"
                                android:textSize="30sp"/>

                            <TextView
                                android:id="@+id/distanceTotal"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="30sp"
                                android:background="@color/white"
                                android:textColor="@color/black"
                                android:layout_marginVertical="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#EF0D5A"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="15dp">

                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            android:text="Distance Walked :-"
                            android:textStyle="italic"
                            android:textSize="30sp"/>

                        <TextView
                            android:id="@+id/distanceWalk"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="30sp"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            android:layout_marginVertical="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#EF0D5A"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="15dp">

                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="Distance Ran :-"
                            android:background="@color/white"
                            android:textStyle="italic"
                            android:textSize="30sp"/>

                        <TextView
                            android:id="@+id/distanceRun"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="30sp"
                            android:background="@color/white"
                            android:textColor="@color/black"
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Previous days record"
            android:backgroundTint="#EF0D5A"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:onClick="showAll"/>


    </LinearLayout>

</ScrollView>